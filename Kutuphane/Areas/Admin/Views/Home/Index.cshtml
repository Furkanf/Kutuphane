<hr />

@using (Html.BeginForm("SetTime","Home"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="">Gün</label>
        <input type="number" class="form-control" id="day" name="day" placeholder="Zaman ötele">
    </div>
    <button type="submit" class="btn btn-primary">Ilerle</button>

}



<h1>Güncel Tarih : @Date.date.ToString("dd/MM/yyyy") </h1>
