@using Kutuphane.Date;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <br /><br />

<h2>
    @Html.ActionLink("Kitaplar", "Index", "Books", new { area = "Admin" }, new { @class = "" })
</h2>
<h2>
    @Html.ActionLink("Kullanıcılar", "Index", "StandardUsers", new { area = "Admin" }, new { @class = "" })
